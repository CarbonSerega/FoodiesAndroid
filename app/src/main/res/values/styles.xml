<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_back_icon</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.PrimaryDarkAccent">
        <item name="colorAccent">@color/colorPrimaryDark</item> <!-- Whatever color you want-->
    </style>

</resources>
